{
    "compilerOptions": {
      "target": "ES6",
      "moduleResolution": "Node",
      "baseUrl": "./",
      "paths": {
        "@src/*": ["src/*"]
      },
      "allowSyntheticDefaultImports": true,
      "checkJs": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  